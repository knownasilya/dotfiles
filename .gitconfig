[user]                                                                                                 
  email = ilya@burstcreations.com                                                                      
  name = Ilya Radchenko                                                                                
  username = knownasilya                                                                               
[push]                                                                                                 
  default = simple                                                                                     
[color]                                                                                                
  ui = true                                                                                            
[alias]                                                                                                
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat        
  lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=sho
  vision = log --since='2 weeks ago' --author='Ilya' --no-merges --pretty=format:"%C(yellow)%h\\ %ad%Cr
  visionextended = log --since='3 weeks ago' --author='Ilya' --no-merges --pretty=format:"%C(yellow)%h\
  ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=rela
  le = log --oneline --decorate                                                                        
  fl = log -u                                                                                          
  dl = "!git ll -1"                                                                                    
  dlc = diff --cached HEAD^                                                                            
  lst = diff --staged --name-only --diff-filter=ACMRT                                                  
  f = "!git ls-files | grep -i"                                                                        
  grep = grep -Ii                                                                                      
  lt = describe --tags --abbrev=0                                                                      
  co = checkout                                                                                        
  ci = commit                                                                                          
  st = status                                                                                          
  br = branch                                                                                          
  pl = pull                                                                                            
  pu = push                                                                                            
  la = "!git config -l | grep alias | cut -c 7-"                                                       
[core]                                                                                                 
  excludesfile = /Users/iradchenko/.gitignore_global                                                   
[filter "lfs"]                                                                                         
  clean = git-lfs clean %f                                                                             
  smudge = git-lfs smudge %f                                                                           
  required = true   
